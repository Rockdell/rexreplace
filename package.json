{
  "name": "rexreplace",
  "version": "4.1.1",
  "description": "Smooth search & replace in files from CLI.",
  "author": "Mathias Rangel Wulff",
  "license": "MIT",
  "main": "src/engine.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathiasrw/rexreplace.git"
  },
  "bin": {
    "rr": "bin/rexreplace.cli.min.js",
    "rexreplace": "bin/rexreplace.cli.min.js",
    "rexreplace_unmin": "bin/rexreplace.cli.js",
    "rexreplace_ES6": "bin/ES6/cli.js"
  },
  "scripts": {
    "test-minify": "run-s format build-minify global-install test-api",
    "test": "run-s format build global-install test-api",
    "prebuild": "rm -fr bin",
    "build": "tsc src/cli --outDir bin/ES6 -t ES6 && rollup -c",
    "postbuild": "cp bin/rexreplace.cli.js bin/rexreplace.cli.min.js",
    "build-minify": "run-s build minify",
    "minify": "echo '#!/usr/bin/env node' > bin/rexreplace.cli.min.js && google-closure-compiler-js bin/rexreplace.cli.js >> bin/rexreplace.cli.min.js",
    "global-install": "npm uninstall -g rexreplace && npm -g install ./",
    "test-api": "bash test/cli/run.sh && mocha test/cli.js",
    "test-speed": "bash test/speed/run.sh",
    "test-man": "run-s build global-install",
    "test-bin": "run-s global-install test-api",
    "test-ci": "run-s test-format test-bin test-minify",
    "prepublishOnly": "git pull && run-s test-minify load-options",
    "load-options": "rr -h | rr 'Options:([\\s\\S]+)Examples:' _ -m | rr '\n {26,}' ' ' | rr \"'\" '`'  | rr '^  (-.+?), (--[^ ]+) *' '`€1` | **`€2`** ' | rr '(^---- . ----\n)[\\s\\S]*?(\n## Good to know)' '€1 + _pipe + €2' readme.md -jT",
    "postpublish": "git add --all && git commit -m v$(node -e 'console.log(require(`./package.json`).version)') && git tag v$(node -e 'console.log(require(`./package.json`).version)') && git push && git push --tag && (open https://github.com/mathiasrw/rexreplace/releases || 1)",
    "test-format": "yarn prettier --list-different || (echo 'Please correct file formatting using `npm run format` and try again.' && exit 1)",
    "format": "yarn prettier --write",
    "prettier": "prettier '{src,test}/**/*.{scss,css,js,ts}'"
  },
  "keywords": [
    "search",
    "find",
    "replace",
    "regex",
    "regexp",
    "regular expression",
    "sed"
  ],
  "devDependencies": {
    "@types/node": "^10.12.18",
    "assert": "^1.4.1",
    "google-closure-compiler-js": "^20181210.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.12.1",
    "re2": "^1.8.3",
    "rollup": "^1.0.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-closure-compiler-js": "^1.0.6",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-filesize": "^6.0.0",
    "rollup-plugin-hashbang": "^1.0.1",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-preserve-shebang": "^0.1.6",
    "rollup-plugin-progress": "^1.0.0",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript3": "^1.1.2",
    "rollup-plugin-uglify": "TrySound/rollup-plugin-uglify",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "yarn": "^1.9.4"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "globs": "^0.1.4",
    "replacestream": "^4.0.3",
    "typescript-require": "^0.2.10",
    "yargs": "^12.0.2"
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "bugs": {
    "url": "https://github.com/mathiasrw/rexreplace/issues"
  },
  "homepage": "https://github.com/mathiasrw/rexreplace#readme"
}
